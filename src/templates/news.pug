extends _base/_layout
block settings 

	- title = 'Диоптрика — Новости';


mixin newsCard(imgDesk, imgMob, date, title, text)
	a.news_card(href="/news_card_page")
		.news_card__img 
			+img(imgDesk, '', 'image image--desk')
			+img(imgMob, '', 'image image--mob')
		p.news_card__date= date
		p.news_card__title!= title
		p.news_card__text!= text


block content
